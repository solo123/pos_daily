

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">忘记密码了?</h2>
  <%= devise_error_messages! %>

  <%#= f.label :email %>
  <%= f.email_field :email, class: "form-control singleipt", placeholder: "请输入您的邮箱地址", :autofocus => true %>

  <%= f.submit "发送重设密码邮件", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
<% end %>


