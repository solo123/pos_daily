.container
  = render 'clients/admin_mock'
  .form-inline
    = search_form_for @q, url: my_trades_path, html: {class: "form-group"} do |f|
      .form-group
        = f.label :trade_date_gteq, '开始日期', class: "sr-only"
        = f.text_field :trade_date_gteq, placeholder: "开始日期", class: "form-control search-ipt-terminal date-picker"
      .form-group
        = f.label :trade_date_lteq, '结束日期', class: "sr-only"
        = f.text_field :trade_date_lteq, placeholder: '结束日期', class: 'form-control search-ipt-terminal date-picker'
      .form-group
        = f.text_field :merchant_number_cont, placeholder: "商户编号", class: "form-control"
      .form-group
        = f.text_field :merchant_name_cont, placeholder: "商户名称", class: "form-control"
      .form-group
        = f.text_field :terminal_number_cont, placeholder: "终端号", class: "form-control"
      = f.submit '筛选', class: "btn btn-primary"
  %p
  %section.r-morethan-800
    %table.table.table-bordered.table-striped.table-hover
      %tr
        %th 交易日期
        %th 商户号 
        %th 商户名称
        %th 终端号
        %th 交易笔数
        %th 交易金额
        %th 交易手续费
        - if @data_user.agent?
          %th 实收金额
          %th 基准手续费
          %th 利润

      %tr.success
        %td{colspan:'4'} 合计
        %td= @sum[:biz_count]
        %td.num= number_with_delimiter '%.2f' % @sum[:amount] if @sum[:amount]
        %td.num= number_with_delimiter '%.2f' % @sum[:commission] if @sum[:commission]
        - if @data_user.agent?
          %td.num= number_with_delimiter '%.2f' % @sum[:actual_amount]
          %td.num= number_with_delimiter '%.2f' % @sum[:base_commission]
          %td.num= number_with_delimiter '%.2f' % @sum[:profit]

      - @collection.each do |trade|
        %tr
          %td= trade.trade_date
          %td= trade.merchant_number
          %td= trade.merchant_name
          %td= trade.terminal_number
          %td= trade.biz_count
          %td.num= number_with_delimiter '%.2f' % trade.amount
          %td.num= number_with_delimiter '%.2f' % trade.commission
          - if @data_user.agent?
            %td.num= number_with_delimiter '%.2f' % trade.actual_amount
            %td.num= number_with_delimiter '%.2f' % trade.base_commission
            %td.num= number_with_delimiter '%.2f' % trade.profit
          
