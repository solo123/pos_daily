= content_for :head do
  %script{src: "/css/chart.min.js"}
  :javascript
    var test = null;
    $(function(){
      $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        test = e.target // activated tab
        var url = '/reports/' + $(e.target).data('report');
        $.get(url);
      });
    });

.col-md-3
  %select.form-control#diagram_type
    %option{value: 'bar'} 柱状图
    %option{value: 'line'} 曲线图

%canvas#chart_canvas{ width: 840, height: 400}

