.container
  = simple_form_for @object, :html => {:class => 'well form-horizontal'}  do |f|
    = f.error_notification
    = f.input :trade_date
    = f.input :merchant_number
    = f.input :merchant_name
    = f.input :agent_number
    = f.input :agent_name
    = f.input :terminal_number
    = f.input :biz_count
    = f.input :amount
    = f.input :commission
    = f.input :actual_amount
    = f.input :base_commission
    = f.input :profit
    = f.input :status, :collection => [["New", 0], ['Done', 1]]
    .form-actions
      = f.submit "Save", :class => "btn btn-primary" 
      = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" 

