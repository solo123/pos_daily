= render 'admin_mock'
%h1 Editing Object
= link_to 'Show', @object
=link_to 'Back', @object

.well
  = simple_form_for @object, :html => {:class => 'well form-horizontal'}  do |f|
    = f.error_notification
    = f.input :email
    = f.input :username
    = f.input :roles
    .form-actions
      = f.submit "Save", :class => "btn btn-primary" 
      = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" 

.well
  = simple_form_for @object, :html => {:class => 'well form-horizontal'}  do |f|
    = f.error_notification
    = f.input :password
    = f.input :password_confirmation
    .form-actions
      = f.submit "Save", :class => "btn btn-primary" 
      = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" 

