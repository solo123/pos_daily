.container

  = render 'admin_mock'
  %h1 New object
  = link_to '返回列表', clients_path
  .well
    = simple_form_for @object, :url => clients_path, :html => {:class => 'well form-horizontal'}  do |f|
      = f.error_notification
      .form-group
        = f.input :email, class: 'form-control', placeholder: "商户编号"
      .form-group
        = f.input :username
      .form-group
        = f.input :roles
      .form-group
        = f.input :password
      .form-group
        = f.input :password_confirmation
      .form-actions
        = f.submit "Save", :class => "btn btn-primary" 
        = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" 



