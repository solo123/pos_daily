= render 'admin_mock'
%h1 New object
= link_to '返回列表', clients_path
.well
  = simple_form_for @object, :url => clients_path, :html => {:class => 'well form-horizontal'}  do |f|
    = f.error_notification
    = f.input :email
    = f.input :username
    = f.input :roles
    = f.input :password
    = f.input :password_confirmation
    .form-actions
      = f.submit "Save", :class => "btn btn-primary" 
      = submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" 



