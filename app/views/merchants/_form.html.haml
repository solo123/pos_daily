= form_for @merchant do |f|
  - if @merchant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@merchant.errors.count, "error")} prohibited this merchant from being saved:"
      %ul
        - @merchant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :merchant_number
    = f.text_field :merchant_number
  .field
    = f.label :merchant_name
    = f.text_field :merchant_name
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
